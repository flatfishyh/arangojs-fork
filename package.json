{
  "name": "arango",
  "version": "3.0.0-dev",
  "description": "",
  "main": "index.js",
  "files": [
    "lib/",
    "index.js",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "npm run lint && npm run test-only",
    "test-only": "mocha --growl -R spec",
    "cover": "npm run lint && istanbul cover --report lcov _mocha -- -R spec",
    "coveralls": "npm run cover && cat ./coverage/lcov.info | coveralls ; rm -rf ./coverage",
    "watch": "dirwatch -d 500 -c 'npm run test-only && npm run lint && npm run dist' ./lib ./test",
    "dist": "npm run bundle && npm run minify",
    "bundle": "browserify -t dekeywordify -s arango ./index.js > dist/arango.js",
    "minify": "uglifyjs dist/arango.js > dist/arango.min.js",
    "lint": "jshint index.js lib test",
    "prepublish": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arangodb/arangodbjs.git"
  },
  "author": "Alan Plum <me@pluma.io>",
  "license": "APACHE-2.0",
  "bugs": {
    "url": "https://github.com/arangodb/arangodbjs/issues"
  },
  "homepage": "https://github.com/arangodb/arangodbjs",
  "devDependencies": {
    "browserify": "^6.1.0",
    "dekeywordify": "^0.2.0",
    "dirwatch": "^1.1.0",
    "expect.js": "^0.3",
    "jshint": "^2.5.6",
    "mocha": "^1.21",
    "uglify-js": "^2.4.15",
    "xhr": "^1.17.0"
  },
  "browser": {
    "request": "xhr"
  },
  "dependencies": {
    "array-map": "0.0.0",
    "coveralls": "^2.11.2",
    "extend": "^2.0.0",
    "istanbul": "^0.3.5",
    "promise-es6": "^0.1.0",
    "request": "^2.42.0"
  }
}
